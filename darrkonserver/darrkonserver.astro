---
import { useState } from "react";

// Default URL
const defaultUrl = "https://https://educationproject-seven.vercel.app/";
const { searchParams } = Astro.request.url ? new URL(Astro.request.url) : {};
const targetUrl = searchParams.get("url") || defaultUrl;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Iframe Proxy</title>
    <style>
      body {
        margin: 0;
        display: flex;
        flex-direction: column;
        height: 100vh;
        background: #0b0b0e;
        color: white;
        font-family: sans-serif;
      }
      header {
        padding: 8px;
        background: #121218;
        display: flex;
        gap: 6px;
        align-items: center;
      }
      input {
        flex: 1;
        padding: 6px;
        border-radius: 6px;
        border: none;
        outline: none;
      }
      button {
        padding: 6px 10px;
        border: none;
        border-radius: 6px;
        background: #2563eb;
        color: white;
        cursor: pointer;
      }
      iframe {
        flex: 1;
        width: 100%;
        border: none;
      }
    </style>
  </head>
  <body>
    <header>
      <form method="get" action="/proxy" style="display:flex; flex:1; gap:6px">
        <input type="text" name="url" value={targetUrl} placeholder="Enter a URL..." />
        <button type="submit">Launch</button>
      </form>
    </header>

    <iframe src={targetUrl}></iframe>
  </body>
</html>
